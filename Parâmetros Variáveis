using System;

class ParametrosVariaveis {
    
    public static void despedida (params string [] alunos){
        
        //percorre o grupo de alunos, um aluno de cada vez
        foreach (var aluno in alunos){
            
            Console.WriteLine ($" Tchau {aluno}, até a próxima!");
        }
        
    }
    
    static void Main (){
        
        despedida ("Aline", "João", "Bruna", "Roberto");

    }
        
        
}
